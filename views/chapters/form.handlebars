<form action="/chapters/upsert" method="post">
  <input type="hidden" name="_csrf" value="{{_csrfToken}}">

  <h1>{{#if chapter}}Edit Chapter{{else}}New Chapter{{/if}}</h1>

  {{#if chapter}}
    <div>
      <h2>Editing: {{chapter.name}}</h2>
      <input type="hidden" name="id" value="{{chapter.id}}">
    </div>
  {{/if}}

  <div>
    <label for="name">Chapter Name:</label>
    <input type="text" id="name" name="name" value="{{#if chapter}}{{chapter.name}}{{/if}}" required>
  </div>

  <div>
    <label for="source">Source:</label>
    <input type="text" id="source" name="source" value="{{#if chapter}}{{chapter.source}}{{/if}}" required>
  </div>

  <div>
    <label for="source_link">Source Link:</label>
    <input type="text" id="source_link" name="sourceLink" value="{{#if chapter}}{{chapter.sourceLink}}{{/if}}" required>
  </div>

  <button type="submit" class="btn btn-primary">{{#if chapter}}Update{{else}}Create{{/if}} Chapter</button>
</form>